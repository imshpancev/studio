
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is safe for public assets like avatars.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Users can only write to their own folder, identified by their UID.
    // e.g., /avatars/user_uid/filename.jpg
    match /avatars/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
