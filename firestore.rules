rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    // - Anyone can create a user profile (during signup).
    // - A user can only read or update their own profile.
    // - Deletion is not allowed.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update: if request.auth.uid == userId;
      allow delete: if false;

      // Subcollections of users can only be accessed by the user themselves
       match /{allChildren=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Workouts Collection
    // - A user can only create workouts for themselves.
    // - Anyone authenticated can read any workout (for social feed feature).
    // - A user can only update or delete their own workouts.
    match /workouts/{workoutId} {
      allow create: if request.resource.data.userId == request.auth.uid;
      allow read: if request.auth.uid != null;
      allow update, delete: if resource.data.userId == request.auth.uid;
    }
  }
}
