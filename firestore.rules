
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own profile document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Users can manage their own subcollections (meals, nutrition, water).
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Rules for the root 'workouts' collection
    match /workouts/{workoutId} {
      // Anyone authenticated can read any workout (for the public feed).
      allow read: if request.auth != null;
      // Users can only create workouts for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Users can only update or delete their own workouts.
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
