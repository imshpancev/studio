
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read other users' profiles
    // Allow users to create and update their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.uid;
      allow update, delete: if request.auth.uid == userId;
    }
    
    // Allow users to manage their own workouts
    match /workouts/{workoutId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    // Allow users to manage their own subcollections by checking the parent userId
    match /users/{userId}/{collection}/{docId} {
      allow list, read, write: if request.auth.uid == userId;
    }
  }
}
