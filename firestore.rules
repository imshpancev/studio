rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read any profile, but only write to their own.
    match /users/{userId} {
      allow get, list: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only read/delete their own workouts.
    // Listing workouts requires filtering by their own userId.
    // Creating/updating workouts requires the workout's data to have the correct userId.
    match /workouts/{workoutId} {
      allow get, delete: if request.auth.uid == resource.data.userId;
      allow list: if request.auth.uid != null;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update: if request.auth.uid == resource.data.userId;
    }
    
    // For user-specific sub-collections, access is granted if the user ID in the path
    // matches the authenticated user's ID. This is simpler and more secure for sub-collections.
    match /users/{userId}/nutrition/{date} {
      allow read, write: if request.auth.uid == userId;
    }
    
    match /users/{userId}/meals/{mealId} {
       allow get, list, write: if request.auth.uid == userId;
    }

    match /users/{userId}/water/{date} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
