rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Allow any authenticated user to read any single profile document
      allow get: if request.auth != null; 
      // Allow authenticated users to list users for search/leaderboards
      allow list: if request.auth != null;
      // Allow user to write only to their own profile
      allow write: if request.auth.uid == userId;

      // Sub-collections remain private
      match /nutrition/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /meals/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /water/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    match /workouts/{workoutId} {
      // Allow authenticated users to list workouts for feeds/records
      allow list: if request.auth != null;
      // Allow any authenticated user to read any single workout document
      allow get: if request.auth != null;
      // Allow users to create, update, delete only their own workouts
      allow create, update, delete: if request.auth.uid == request.resource.data.userId;
    }
  }
}
