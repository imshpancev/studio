rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read any profile, but only write to their own.
    // This covers create, update, and delete for the user's own document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;

      // Rules for user subcollections
      match /nutrition/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /meals/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /water/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Allow authenticated users to read any workout,
    // but only create, update, and delete their own.
    match /workouts/{workoutId} {
      allow read: if request.auth != null;
      // For create, check the incoming document's userId
      allow create: if request.auth.uid == request.resource.data.userId;
      // For update/delete, check the existing document's userId
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}