
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Secure by default: deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow logged-in users to read their own profile
    match /users/{userId} {
      // Any authenticated user can create their own profile document.
      // The document ID must match their own user ID.
      allow create: if request.auth.uid == userId;

      // Users can only read, update, or delete their own profile.
      allow read, update, delete: if request.auth.uid == userId;
    }

    match /workouts/{workoutId} {
        allow read, create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Allow users to read workouts of other users for the feed
    match /workouts/{workoutId} {
        allow read: if request.auth != null;
    }

    match /records/{userId} {
        allow read, write: if request.auth.uid == userId;
    }
    
    match /nutrition/{date} {
       allow read, write: if request.auth != null;
    }

    match /meals/{mealId} {
       allow read, write: if request.auth != null;
    }
    
    match /water/{date} {
      allow read, write: if request.auth != null;
    }
  }
}
