rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read any profile, but only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      
      // Correct way to allow a user to create their own document.
      // We check that the data being sent contains a userId that matches the user's auth uid.
      allow create: if request.auth.uid == request.resource.data.userId;
      
      // A user can only update their own document.
      allow update, delete: if request.auth.uid == userId;

      // Rules for user subcollections
      match /nutrition/{date} {
        allow read, write: if request.auth.uid == userId;
      }
      match /meals/{mealId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /water/{date} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Allow users to read any workout, but only write their own.
    match /workouts/{workoutId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
