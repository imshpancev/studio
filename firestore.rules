rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users:
    // - Anyone authenticated can list and get user profiles (for feeds, user search)
    // - A user can only create, update or delete their own profile
    match /users/{userId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if request.auth.uid == userId;
    }

    // Workouts, Meals, Nutrition, Water logs:
    // - Users can only manage their own documents in these subcollections.
    match /users/{userId}/{collection}/{docId} {
        allow read, write: if request.auth.uid == userId;
    }
    
    // Top-level collections that require userId matching
    match /workouts/{docId} {
      allow read, write: if request.resource.data.userId == request.auth.uid;
    }
    
    match /meals/{docId} {
       allow read, write: if request.resource.data.userId == request.auth.uid;
    }
  }
}
