
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only create their own profile, and can only read/update their own profile.
    // Public listing is allowed for searching users, but not reading individual sensitive docs.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update: if request.auth.uid == userId;
      allow list: if request.auth != null;
      // Deny delete for now to prevent accidental account loss.
      allow delete: if false;
    }

    // Users can read/write their own workouts.
    match /workouts/{workoutId} {
      allow read, create, update, delete: if request.auth.uid == resource.data.userId;
    }

    // Users can list their own workouts.
    match /users/{userId}/workouts/{workoutId} {
        allow read, write: if request.auth.uid == userId;
    }

    // Users can read/write their own nutrition data.
     match /users/{userId}/nutrition/{date} {
      allow read, write: if request.auth.uid == userId;
    }

     // Users can read/write their own meal data.
    match /users/{userId}/meals/{mealId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Users can read/write their own water data.
    match /users/{userId}/water/{date} {
      allow read, write: if request.auth.uid == userId;
    }

    // Users can read/write their own records.
     match /users/{userId}/records/{recordId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
