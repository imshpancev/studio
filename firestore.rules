rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only update/delete their own profile, but anyone can read public profiles.
    // This is needed for the feed and user search functionality.
    match /users/{userId} {
      allow read;
      allow write: if request.auth.uid == userId;

      // Rules for user's subcollections
      match /{subcollection}/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Anyone can read the list of workouts for the feed/records pages.
    // Users can only create workouts for themselves.
    // Users can only update/delete their own workouts.
    match /workouts/{workoutId} {
      allow read;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
