rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users can only read public data of other users, but can write to their own document.
    match /users/{userId} {
      allow get: if request.auth != null;
      allow write: if request.auth.uid == userId;

      // Rules for user's subcollections
      match /nutrition/{date} {
        allow read, write: if request.auth.uid == userId;
      }

      match /meals/{mealId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
      
      match /water/{date} {
         allow read, write: if request.auth.uid == userId;
      }
    }

    // Workouts can be read by any authenticated user for feeds/leaderboards,
    // but can only be written/deleted by the owner.
    match /workouts/{workoutId} {
      allow read, list: if request.auth != null;
      allow create, update, delete: if request.auth.uid == request.resource.data.userId;
    }
    
    match /users/{userId}/{path=**} {
      allow read, write: if request.auth.uid == userId;
    }

  }
}
