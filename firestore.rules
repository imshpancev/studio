
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users Collection
    // Read: Any authenticated user can read any profile (for user profile pages, feeds, etc.)
    // Create: A user can only create a document where the document ID matches their own UID.
    // Update/Delete: A user can only update or delete their own profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update, delete: if request.auth.uid == userId;
    }

    // Workouts Collection
    // Read: Any authenticated user can read workouts (for feeds, public history).
    // Create: User can only create a workout for themselves.
    // Update/Delete: User can only modify their own workouts.
    match /workouts/{workoutId} {
      allow read: if request.auth != null;
      allow create: if request.resource.data.userId == request.auth.uid;
      allow update, delete: if resource.data.userId == request.auth.uid;
    }

    // Nutrition Data (Goals)
    // Only the user can read/write their own nutrition goal data.
    match /users/{userId}/nutrition/{date} {
        allow read, write: if request.auth.uid == userId;
    }
    
    // Meals
    // Only the user can read/write their own meal data.
    match /users/{userId}/meals/{mealId} {
        allow read, write: if request.auth.uid == userId;
    }
    
    // Water
    // Only the user can read/write their own water intake data.
    match /users/{userId}/water/{date} {
        allow read, write: if request.auth.uid == userId;
    }
  }
}
