
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own profile document.
    // Public read access is granted to allow fetching user info for feeds.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;

      // Users can only manage their own subcollections.
      match /meals/{mealId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
      match /nutrition/{date} {
        allow read, write, delete: if request.auth.uid == userId;
      }
      match /water/{date} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    // Workouts can be read by any authenticated user for feeds/leaderboards.
    // However, users can only create, update, or delete their own workouts.
    match /workouts/{workoutId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
