
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read public profiles, but only write to their own.
    match /users/{userId} {
      allow read;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only manage their own workouts.
    match /workouts/{workoutId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Users can only manage their own meals.
    match /meals/{mealId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Users can only manage their own daily nutrition goals.
    match /nutrition/{date} {
      // Assuming the document is under /users/{userId}/nutrition/{date}
      // The rule needs to check the userId from the path.
      match /users/{userId}/nutrition/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Users can only manage their own water intake.
     match /water/{date} {
      match /users/{userId}/water/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
