rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own profile or list all users, but only write to their own.
    // Create is allowed for any authenticated user to complete onboarding.
    match /users/{userId} {
      allow get, list: if request.auth != null;
      allow write: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Users can only get or list their own workouts.
    match /workouts/{workoutId} {
      allow get, write: if request.auth.uid == resource.data.userId;
      allow list: if request.auth.uid == request.query.filters[0].value;
    }

    // Users can only read/write their own meals.
    match /meals/{mealId} {
      allow get, write: if request.auth.uid == resource.data.userId;
      allow list: if request.auth.uid == request.query.filters[0].value;
    }

    // Users can only read/write their own nutrition goals.
    match /nutrition/{date} {
      allow read, write: if request.auth.uid == userId;
    }

    // Users can only read/write their own water intake.
    match /water/{date} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
