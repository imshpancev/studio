
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read profiles, but only owners to write.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth.uid == userId;
    }

    // Allow authenticated users to read workouts, but only owners to write.
    match /workouts/{workoutId} {
      allow read, list: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    // Subcollections can only be accessed by the profile owner.
    match /users/{userId}/{collection}/{docId} {
        allow read, list, write: if request.auth.uid == userId;
    }
  }
}
