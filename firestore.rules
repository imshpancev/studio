rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read any profile, but only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;

      // Users can only manage their own nutrition, meals, and water data.
      match /nutrition/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /meals/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /water/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Anyone authenticated can read and create workouts.
    // Only the owner can update or delete their own workout.
    match /workouts/{workoutId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

  }
}
