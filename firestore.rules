rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // USER PROFILES
    // Read: Any authenticated user can read public profile data.
    // Write: Only the user themselves can create or update their own profile.
    match /users/{userId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid == userId;
    }
    
    // NUTRITION & WATER (Personal data)
    // Only the user can read or write their own nutrition/water logs.
    match /users/{userId}/nutrition/{date} {
      allow read, write: if request.auth.uid == userId;
    }
    match /users/{userId}/meals/{mealId} {
       allow read, write: if request.auth.uid == userId;
    }
     match /users/{userId}/water/{date} {
      allow read, write: if request.auth.uid == userId;
    }

    // WORKOUTS
    // Read: Any authenticated user can read workout data (for feeds, etc.).
    // Write: A user can only create/update/delete their own workouts.
    match /workouts/{workoutId} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}