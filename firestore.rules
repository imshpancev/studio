rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read/write their own data, and allow any authenticated
    // user to read data from other users.
    match /users/{userId}/{document=**} {
      allow read, list: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Allow any authenticated user to read/list workouts (for feeds).
    // Allow users to create workouts, and update/delete their own workouts.
    match /workouts/{workoutId} {
        allow read, list: if request.auth != null;
        allow create: if request.auth.uid == request.resource.data.userId;
        allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
