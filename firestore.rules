rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read any other user's public profile data.
    // They can only write to their own profile.
    match /users/{userId} {
      allow get, list: if request.auth.uid != null;
      allow write: if request.auth.uid == userId;
    }
    
    // Users can only read or write their own workouts.
    match /workouts/{workoutId} {
      allow read, write: if request.auth.uid == request.resource.data.userId;
    }
    
    // Users can only manage their own nutrition data.
    match /users/{userId}/nutrition/{date} {
      allow read, write: if request.auth.uid == userId;
    }

    // Users can only manage their own meal data.
    match /users/{userId}/meals/{mealId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Users can only manage their own water intake data.
    match /users/{userId}/water/{date} {
      allow read, write: if request.auth.uid == userId;
    }

    // Records are derived data, making them read-only for the user.
    match /users/{userId}/records/{recordId} {
        allow read: if request.auth.uid == userId;
        allow write: if false; // No direct writes
    }
  }
}
