
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users Collection
    // - Anyone can create their own user profile document.
    // - Only the owner can update or delete their own profile.
    // - Any authenticated user can read other user profiles (for public profile pages).
    match /users/{userId} {
      allow read: if request.auth.uid != null;
      allow create: if request.resource.data.uid == request.auth.uid;
      allow update, delete: if request.auth.uid == userId;

      // Subcollections for user-specific, private data
      match /nutrition/{date} {
        allow read, write: if request.auth.uid == userId;
      }
      match /meals/{mealId} {
        allow read, write: if request.auth.uid == userId;
      }
       match /water/{date} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Workouts Collection
    // - Users can only create workouts for themselves.
    // - Users can only read, update, or delete their own workouts.
    match /workouts/{workoutId} {
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}
