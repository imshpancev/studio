rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only create, read, and update their own profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow creation if the user is creating their own profile document.
      allow create: if request.auth != null && request.auth.uid == userId;

      // Rules for subcollections of user
      match /workouts/{workoutId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
      match /nutrition/{date} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /water/{date} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /meals/{mealId} {
         allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
       match /records/{recordId} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Workouts can be read by anyone (for feeds), but only created/updated/deleted by the owner.
    match /workouts/{workoutId} {
       allow read: if request.auth != null;
       allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
