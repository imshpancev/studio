
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      // Allow create only if the user is creating their own document
      // and provides their own UID in the document body.
      allow create: if isOwner(request.resource.data.uid);
      // Allow update and delete only for the owner of the document
      allow update, delete: if isOwner(userId);
    }
    
    // Allow users to manage their own workouts
    match /workouts/{workoutId} {
      allow read: if request.auth != null;
      allow list: if request.auth != null;
      // The workout document must contain a userId field matching the user
      allow create: if isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Rules for all subcollections of the user document
    match /users/{userId}/{collection}/{docId} {
       // Only the user themselves can read or write to their subcollections
       allow read, write, delete, list: if isOwner(userId);
    }
  }
}
