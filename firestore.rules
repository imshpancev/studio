
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    // - Users can read their own profile.
    // - Creating a user document is handled by a server-side Firebase Function, so client creation is disallowed.
    // - Users can update their own profile.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if false; // Creation is handled by the onUserCreate Firebase Function
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Disallow client-side deletion
    }

    // Workouts Collection
    // - Users can read their own workouts.
    // - Users can create new workouts for themselves.
    // - Users can update/delete their own workouts.
    match /workouts/{workoutId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Nutrition and Water data
    match /users/{userId}/nutrition/{date} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/meals/{mealId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
     match /users/{userId}/water/{date} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

  }
}
