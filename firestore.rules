
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow user to read and write their own profile
      allow read, update, delete: if request.auth.uid == userId;
      // Allow user to create their own profile, ensuring the UID matches
      allow create: if request.auth.uid == request.resource.data.uid;
    }
    
    match /workouts/{workoutId} {
      // Allow user to create, read, update, delete their own workouts
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    match /meals/{mealId} {
        // Allow user to manage their own meals
        allow read, write: if request.auth.uid == resource.data.userId;
    }

    match /nutrition/{date} {
        // Allow user to manage their own daily nutrition goals
        allow read, write: if request.auth.uid == request.path[2];
    }
    
    match /water/{date} {
        // Allow user to manage their own daily water intake
        allow read, write: if request.auth.uid == request.path[2];
    }
  }
}
