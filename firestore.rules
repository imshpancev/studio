rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read their own profile and list all users for discovery.
    // They can only write to their own profile.
    match /users/{userId} {
      allow get, list: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }
    
    // A user can only read/write/delete their own workouts.
    // The 'list' permission is granted if the query is filtered by the user's own userId.
    match /workouts/{workoutId} {
      allow get, delete: if request.auth.uid == resource.data.userId;
      allow list: if request.auth.uid == request.query.filters.userId;
      allow write: if request.auth.uid == request.resource.data.userId;
    }
    
    // A user can only read/write their own nutrition data.
    match /users/{userId}/nutrition/{date} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // A user can only read/write their own meal data.
    match /users/{userId}/meals/{mealId} {
      allow read, write: if request.auth.uid == userId;
    }

    // A user can only read/write their own water data.
    match /users/{userId}/water/{date} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
