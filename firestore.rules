rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // By default, deny all access.
    match /{document=**} {
      allow read, write: if false;
    }

    // Users Collection
    // - Anyone authenticated can read/list profiles (for feeds, search, etc.)
    // - A user can only create their own profile.
    // - A user can only update/delete their own profile.
    match /users/{userId} {
      allow list, read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update, delete: if request.auth.uid == userId;

      // Nutrition Data Subcollection
      // A user can only access their own nutrition data.
      match /nutrition/{date} {
        allow read, write: if request.auth.uid == userId;
      }
      
      // Meals Subcollection
      // A user can only access their own meals.
      match /meals/{mealId} {
        allow list, read, write, delete: if request.auth.uid == userId;
      }
      
      // Water Data Subcollection
      // A user can only access their own water data.
      match /water/{date} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Workouts Collection
    // - Anyone authenticated can read/list workouts (for feeds, history pages).
    // - A user can only create a workout for themselves.
    // - A user can only update/delete their own workout.
    match /workouts/{workoutId} {
      allow list, read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
