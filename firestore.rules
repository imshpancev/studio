
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Users collection
    // - Anyone can create their own user profile document.
    // - Only the user themselves can read or update their own document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Workouts collection
    // - Users can create workouts for themselves.
    // - Users can read their own workouts.
    // - Users can update or delete their own workouts.
    match /workouts/{workoutId} {
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // Nutrition & Water tracking
    // - Users can create, read, and update their own daily nutrition/water logs.
    match /users/{userId}/nutrition/{date} {
      allow read, write: if request.auth.uid == userId;
    }
    match /users/{userId}/water/{date} {
      allow read, write: if request.auth.uid == userId;
    }
    match /users/{userId}/meals/{mealId} {
       allow read, write, delete: if request.auth.uid == userId;
       allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}
